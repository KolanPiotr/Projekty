@model Lab02.Models.Player

@if(ViewBag.PositionList.Count == 0 || ViewBag.TeamList.Count == 0) {
    <h1>Najpierw dodaj jakąkolwiek drużyne i pozycję</h1>
}
else {
    <h1>Dodaj Zespół</h1>
    <form asp-route="Add" method="post" class="w3-container">
        <p>
            <label asp-for="FirstName">Imię:</label>
            <input asp-for="FirstName" class="w3-input w3-border" />
        </p>
        <p>
            <label asp-for="LastName">Nazwisko:</label>
            <input asp-for="LastName" class="w3-input w3-border" />
        </p>
        <p>
            <label asp-for="Country">Kraj:</label>
            <input asp-for="Country" class="w3-input w3-border" />
        </p>
        <p>
            <label asp-for="BirthDate">data urodzenia:</label>
            <input asp-for="BirthDate" type="date" class="w3-input w3-border"/>
        </p>
        <p>
            <label asp-for="Team">drużyna:</label>
            <select asp-for="TeamId" asp-items="@ViewBag.TeamList">
            </select>
        </p>
        <p>
            <label asp-for="Positions">Pozycja:</label>
            @foreach (var Position in @ViewBag.PositionList) {
            <input type="checkbox" asp-for="Positions"/>@Position
            }
        </p>
        <p>
            <button type="submit" class="w3-btn w3-border">Dodaj</button>
        </p>
    </form>
}